@model ShopASP.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Rejestracja";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section Title {
    Rejestracja
}
@using (@Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal col-sm-10" }))
{
    @Html.AntiForgeryToken()

    <div class="col-md-12">
        <div class="col-md-12 button-margin text-danger">
            @Html.ValidationSummary()
        </div>

    </div>
    <div class="form-group form-control-static">
        @Html.LabelFor(o => o.Email, "E-mail:", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.Email, null, new { @class = "help-inline text-danger" })
        </div>
    </div>

    <div class="form-group form-control-static">
        @Html.LabelFor(o => o.Password, "Hasło:", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.PasswordFor(o => o.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.Password, null, new { @class = "help-inline text-danger" })
        </div>
    </div>

        <div class="form-group form-control-static">
            @Html.LabelFor(o => o.ConfirmPassword, "Potwierdż hasło", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.PasswordFor(o => o.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(o => o.ConfirmPassword, null, new { @class = "help-inline text-danger" })
            </div>
        </div>


        <div class="col-sm-12 text-right button-margin">
            <button type="submit" class="btn btn-primary btn-md text-right">Zajerestruj</button>
        </div>

}

@section Scripts {

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}

