@model ShopASP.ViewModels.LoginViewModel
@{
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section Title {
    Logowanie
}


@using (@Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal col-sm-10" }))
{
    @Html.AntiForgeryToken()

    <div id="login-error">
        @Html.ValidationMessage("loginerror", "")
    </div>

                    <div class="form-group form-control-static" >
                        @Html.LabelFor(o => o.Email, "E-mail:", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.TextBoxFor(o => o.Email, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.Email, null, new { @class = "help-inline text-danger" })
                        </div>


                    </div>
                     
                    <div class="form-group form-control-static">
                        @Html.LabelFor(o => o.Password, "Hasło:", new { @class = "control-label col-sm-2" })
                        <div class="col-sm-10">
                            @Html.PasswordFor(o => o.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(o => o.Password, null, new { @class = "help-inline text-danger" })
                        </div>



                    </div>

                    <div class="col-sm-12">
                        <div class="col-sm-6 text-left">
                            <a class="text-left" href="@Url.Action("Register")">Nie mam jeszcze konta</a>
                        </div>
                        <div class="col-sm-12 text-right button-margin">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @checked = "checked" })
                            @Html.LabelFor(m => m.RememberMe)
                            <button type="submit" class="btn btn-primary btn-md text-right">Zaloguj</button>
                        </div>
                    </div>


}

@section Scripts {

<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}

