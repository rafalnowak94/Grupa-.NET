@using System.Web.Optimization
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/sheets")
    @RenderSection("Sheets", required: false)
</head>
<body>
    <div class="container">
        <div classs="row text-center">
            <a href="@Url.Content("~/")">
            <img src="@Url.Content("~/Content/Images/logo.png")" />
            </a>
        </div>
    </div>

    <div class="navbar navbar-default navbar-static-top container">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Rozwiń nawigację</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav"></ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#">Koszyk  <span class="glyphicon glyphicon-shopping-cart" aria-hidden="true"></span><span class="badge">0</span></a></li>
                </ul>
                <ul class="nav navbar-nav navbar-center">
                    <li><a href="#">Polecamy</a></li>
                    <li><a href="#">Produkty</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container" style="background-color: #f5f5f5;">
        @RenderBody()
    </div>

    <footer>
        <div class="container" style="background-color:#222222; color:white">
            <div class="row Myfooter">
                <div class="col-md-4 text-center">
                    <h5>FIRMA</h5>
                    <a href="@Url.Action("StaticPage", "Home", new { page ="onas"})">O nas</a><br />
                    <a href="@Url.Action("StaticPage", "Home", new { page ="regulamin"})">Regulamin</a><br />
                    <a href="@Url.Action("StaticPage", "Home", new { page ="wysylka"})">Wysyłka</a><br />
                </div>
                <div class="col-md-4 text-center">
                    <h5>KONTAKT</h5>
                    <a href="mailto:info@januszshop.pl">info@januszshop.pl </a>
                </div>
                <div class="col-md-4 text-center">
                    <h5>ADRES</h5>
                </div>
            </div>
        </div>
    </footer>

    @Scripts.Render("~/bundles/scripts")

    @RenderSection("Scripts", required: false)
</body>
</html>
