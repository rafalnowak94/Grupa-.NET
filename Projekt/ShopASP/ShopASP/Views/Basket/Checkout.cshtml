@model ShopASP.Models.Order

@{
    ViewBag.Title = "Checkout";
    Layout = "~/Views/Shared/_RightSectionLayout.cshtml";
}

@section Title {
    Dane zamówienia
}

@using (@Html.BeginForm("Checkout", "Basket", FormMethod.Post, new { @class = "form-horizontal col-sm-10" }))
{

    <div class="form-group form-control-static">
        @Html.LabelFor(o => o.FirstName, "Imię:", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.FirstName, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.FirstName, null, new { @class = "help-inline text-danger" })
        </div>
    </div>

    <div class="form-group form-control-static">
        @Html.LabelFor(o => o.LastName, "Nazwisko:", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.LastName, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.LastName, null, new { @class = "help-inline text-danger" })
        </div>
    </div>

    <div class="form-group form-control-static">
        @Html.LabelFor(o => o.Address, "Adres:", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.Address, null, new { @class = "help-inline text-danger" })
        </div>
    </div>

    <div class="form-group form-control-static">
        @Html.LabelFor(o => o.CodeAndCity, "Kod i miasto:", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.CodeAndCity, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.CodeAndCity, null, new { @class = "help-inline text-danger" })
        </div>
    </div>

    <div class="form-group form-control-static">
        @Html.LabelFor(o => o.PhoneNumber, "Numer telefonu:", new { @class = "control-label col-sm-2" })
        <div class="col-sm-10">
            @Html.TextBoxFor(o => o.PhoneNumber, new { @class = "form-control" })
            @Html.ValidationMessageFor(o => o.PhoneNumber, null, new { @class = "help-inline text-danger" })
        </div>
    </div>

    <div class="form-group form-control-static">
        <label for="comment">Uwagi:</label>
        @Html.TextAreaFor(o => o.Comment , new { @class = "form-control custom-control", rows = "5", id = "comment" })
    </div>

    <div class="col-sm-12 text-right button-margin">
        <button type="submit" class="btn btn-primary btn-md text-right">Potwierdź</button>
    </div>

}

@section Scripts {

    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}
